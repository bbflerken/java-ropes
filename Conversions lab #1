				int val= 0;

				For (int i=0; i< hex.length();I++)

				{ char c =hex.charAt(I);
			
				int d = digits indexOf ( c );

				value= ll value + d;

			}

			Return Val;
		        }


}
	public static void main(String args[]) { // output on screen 

		int num = 1101011;
		
		System.out.println("Decimal of 1101011 is:" +getDecimal(num));
 
		System.out.println("Decimal of ABCD is:" +getNumber(ABCD));
