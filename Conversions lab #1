module conversion{
	public static int getDecimal(int b) // function to convert binary to decimal
		{
			//Initializing variables
			Int num =b;
			Int decimal = 0;
			int base= 1;
			int temp = num;

			while (temp>0)
			{
				Int digit = temp%10;
				temp = temp/10;
				decimal += digit*base;
				base = base*2;
			}
			return decimal;
			}

		static int getNumber(string hex)
	        {
