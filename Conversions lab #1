
public class Functions 
{
	public static int getDecimal(int b)// function to convert binary to decimal
	{
	    int num = b; 
	    int value = 0; 

	    // Initializing base 
	    // value to 1, i.e 2^0 
	    int base = 1; 

	    int temp = num; 
	    while (temp > 0)
	    { 
	        int digit = temp % 10; 
	        temp = temp / 10; 

	        value += digit * base; 

	        base = base * 2; 
	    } 
	    return value;
	}	
	
	
	public static void binary(int decimal) //function from decimal to binary
	{
	    int binary [] = new int[40]; // array to store binary number 
		int index = 0; // variable to move in the array
		while(decimal >0) // loop for the conversion
		{
		  binary[ index ++] = decimal%2;
		  decimal = decimal/2;
		}
	        for(int i = index-1;i >= 0;i--) // loop to print array on screen
	        {    
                 System.out.print(binary[i]); 
	        }
       }

	
	public static int hexToDecimal ()
	{
		char a='A';
		char b= 'B';
		char c= 'C';
		char d='D';
		
		int x = a+b+c+d;
		
		return x;
	}
	
	
	public static void decToHexa(String []letter) 
    {    
        // char array to store hexadecimal number 
        char[] hexaDeciNum = new char[100]; 
       
        // counter for hexadecimal number array 
        int i = 0; 
        while(i!=0) 
        {    
            // temporary variable to store remainder 
            int temp  = 0; 
           
            // storing remainder in temp variable. 
            temp = i % 16; 
           
            // check if temp < 10 
            if(temp < 10) 
            { 
                hexaDeciNum[i] = (char)(temp + 48); 
                i++; 
            } 
            else
            { 
                hexaDeciNum[i] = (char)(temp + 55); 
                i++; 
            } 
           
            i = i/16; 
        } 
  

    }
	
	public static void main(String args[]) // output on screen 
	{ 
		int num = 1101011;
		System.out.println("Decimal of 1101011 is:" +getDecimal(num));
		System.out.println("Decimal of ABCD is:" +hexToDecimal());
	}
}
