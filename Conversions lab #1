
public class Functions {
	public static int getDecimal(int b) {// function to convert binary to decimal
	    int num = b; 
	    int value = 0; 

	    // Initializing base 
	    // value to 1, i.e 2^0 
	    int base = 1; 

	    int temp = num; 
	    while (temp > 0) { 
	        int digit = temp % 10; 
	        temp = temp / 10; 

	        value += digit * base; 

	        base = base * 2; 
	    } 
	}	

			static int getNumber(String hex) // function to convert hexadecimal to decimal
		        {
